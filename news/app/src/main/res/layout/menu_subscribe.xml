<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/divide"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_insert_subscribe"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ripple_white_bg"
        android:drawableLeft="@mipmap/insert_subscrice_icon"
        android:drawablePadding="12.5dp"
        android:elevation="2dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="添加订阅"
        android:textColor="#333"
        android:textSize="14sp"></TextView>

    <TextView
        android:id="@+id/tv_manage_subscribe"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_insert_subscribe"
        android:background="@drawable/ripple_white_bg"
        android:drawableLeft="@mipmap/manage_subscribe_icon"
        android:drawablePadding="12.5dp"
        android:elevation="2dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="管理订阅"
        android:textColor="#333"
        android:textSize="14sp"></TextView>

    <View
        android:id="@+id/v_sign_one"
        android:layout_width="120dp"
        android:layout_height="1dp"
        android:layout_alignParentRight="true"

        android:layout_below="@id/tv_manage_subscribe"
        android:background="@color/divide" />
</RelativeLayout>