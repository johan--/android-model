<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_articl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.5dp"
        android:layout_marginRight="16.5dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="电气工程自动化中人工智能的运用"
        android:textColor="@color/black_text"
        android:textSize="16sp" />

    <com.tb.wangfang.news.widget.FlowLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="7.5dp">

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.5dp"
            android:layout_marginRight="16.5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/gray_text_6" />

        <TextView
            android:id="@+id/tv_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.5dp"
            android:layout_marginRight="16.5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/gray_text_6" />

        <TextView
            android:id="@+id/tv_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.5dp"
            android:layout_marginRight="16.5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/gray_text_6" />
    </com.tb.wangfang.news.widget.FlowLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.5dp"
        android:layout_marginRight="16.5dp"
        android:layout_marginTop="12.5dp"
        android:ellipsize="end"
        android:lineSpacingExtra="12.5dp"
        android:textColor="#999"
        android:textSize="12sp" />

    <RelativeLayout
        android:id="@+id/rl_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12.5dp">

        <LinearLayout
            android:id="@+id/ll_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_summary_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.5dp"

                android:layout_marginRight="15dp"
                android:drawableLeft="@mipmap/summary_icon"
                android:drawablePadding="5dp"
                android:lines="1"
                android:text="文摘阅读 : 67"
                android:textColor="@color/gray_text_6"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_down_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginRight="15dp"
                android:drawableLeft="@mipmap/down_num_icon"
                android:drawablePadding="5dp"
                android:lines="1"
                android:text="下载 : 67"
                android:textColor="@color/gray_text_6"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_link_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"

                android:drawableLeft="@mipmap/link_icon"
                android:drawablePadding="5dp"
                android:lines="1"
                android:text="第三方链接 : 67"
                android:textColor="@color/gray_text_6"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_reference_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16.5dp"
                android:drawableLeft="@mipmap/reference_icon"
                android:drawablePadding="5dp"
                android:lines="1"
                android:text="被应用 : 67"
                android:textColor="@color/gray_text_6"
                android:textSize="10sp" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="16.5dp"
        android:layout_marginRight="16.5dp"
        android:layout_marginTop="15dp"
        android:background="@color/divide" />
</LinearLayout>