<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/ripple_white_bg"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.5dp"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="具有乐章功能的摆动及其热"
        android:textColor="@color/black_text"
        android:textSize="14sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tv_journal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginLeft="16.5dp"
        android:layout_marginTop="12.5dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="周珍芳-《机器人应用》-2015"
        android:textColor="#999"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_key_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_journal"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="16.5dp"
        android:layout_marginTop="12.5dp"
        android:lines="1"
        android:text="关键词 : 机器人"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_journal"
        android:layout_marginLeft="16.5dp"
        android:layout_marginRight="16.5dp"
        android:layout_marginTop="12.5dp"
        android:lines="1"
        android:text="2017-10-11"
        android:textColor="#dfdfdf"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/tv_key_word"
        android:background="@color/divide" />
</RelativeLayout>