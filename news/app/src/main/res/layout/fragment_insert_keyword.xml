<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tb.wangfang.news.ui.fragment.InsertKeywordFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/divide"
        android:gravity="center_vertical"
        android:paddingLeft="16.5dp"
        android:text="关键词（必填）"
        android:textColor="@color/gray_text_6"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <EditText
            android:id="@+id/et_keyword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toLeftOf="@+id/tv_num_limit"
            android:background="@null"
            android:hint="请输入订阅关键字"
            android:lines="1"
            android:paddingLeft="16.5dp"
            android:textColorHint="#ccc"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_num_limit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingRight="16.5dp"
            android:text="0/20"
            android:textColor="@color/gray_text_6"
            android:textSize="14sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/divide"
        android:gravity="center_vertical"
        android:paddingLeft="16.5dp"
        android:text="订阅来源（至少选择一项）"
        android:textColor="@color/gray_text_6"
        android:textSize="14sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_source_type"
        android:layout_marginTop="7.5dp"
        android:layout_marginBottom="7.5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/divide"
        android:gravity="center_vertical"
        android:paddingLeft="16.5dp"
        android:text="邮箱地址（选题）"
        android:textColor="@color/gray_text_6"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_toLeftOf="@+id/tv_num_limit"
        android:background="@null"
        android:hint="请输入邮箱地址"
        android:lines="1"
        android:paddingLeft="16.5dp"
        android:textColorHint="#ccc"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/divide">

        <Button
            android:id="@+id/btn_complete"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_blue_bg"
            android:text="完成订阅"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>
