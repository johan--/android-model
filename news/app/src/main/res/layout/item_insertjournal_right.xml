<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_journal_cover"
        android:layout_width="85dp"
        android:layout_height="120dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_journal_cover"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/iv_journal_cover"
        android:lines="1"

        android:textColor="#333"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12.5dp"
        android:layout_toRightOf="@+id/iv_journal_cover"
        android:text="2017年第15期  月刊"
        android:textColor="#666"
        android:textSize="12sp" />

    <com.tb.wangfang.news.widget.FlowLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"></com.tb.wangfang.news.widget.FlowLayout>

    <Button
        android:id="@+id/btn_subscribe_state"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@id/iv_journal_cover"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/iv_journal_cover"
        android:background="@mipmap/journal_to_subscribe" />

    <View
        android:layout_below="@+id/iv_journal_cover"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/divide" />
</RelativeLayout>