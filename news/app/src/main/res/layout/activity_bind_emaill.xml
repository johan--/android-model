<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tb.wangfang.news.ui.activity.BindEmaillActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:id="@+id/tv_return"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="16sp"
            android:paddingRight="16dp"
            android:src="@mipmap/return_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="账号绑定"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="17dp"
            android:paddingLeft="38dp"
            android:paddingRight="25dp"
            android:paddingTop="17dp"
            android:src="@mipmap/qc_code_icon" />
    </RelativeLayout>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/edit_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="16.5dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/iv_password_is_see"
        android:background="@null"
        android:hint="请输入6到16位账号\\邮箱\\电话"
        android:lines="1"
        android:maxLines="1"
        android:paddingLeft="4dp"
        android:shadowColor="@color/black"
        android:text="zs630319550"
        android:textColor="#333"
        android:textColorHint="#ccc"
        android:textCursorDrawable="@drawable/edit_cursor_color"
        android:textSize="16sp" />


    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginLeft="16.5dp"
        android:background="@color/divide" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"

        >

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/edit_graph_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="16.5dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:hint="请输入验证码"
            android:lines="1"
            android:maxLines="1"
            android:paddingLeft="4dp"
            android:shadowColor="@color/black"
            android:textColor="#333"
            android:textColorHint="#ccc"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_graph"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6.5dp" />


    </RelativeLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="16.5dp"
        android:layout_marginRight="16.5dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_blue_bg"
        android:text="下一步"
        android:textColor="@color/white" />

</LinearLayout>
