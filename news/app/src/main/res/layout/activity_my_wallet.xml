<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.tb.wangfang.news.ui.activity.MyWalletActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"

        android:background="@color/colorPrimaryDark">

        <ImageView
            android:id="@+id/tv_return"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="16sp"
            android:paddingRight="16dp"
            android:src="@mipmap/return_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="我的钱包"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="16.5dp"
        android:layout_marginRight="16.5dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/wanfang_wallet_card">

        <TextView
            android:id="@+id/tv_sign_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="账户余额"
            android:textColor="#8fff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_remain_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_sign_one"
            android:layout_marginLeft="20dp"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/tv_sign_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_remain_sum"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="万方卡"
            android:textColor="#8fff" />

        <TextView
            android:id="@+id/tv_wanfang_card_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_sign_two"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="500.00元"

            android:textColor="#F9FCFD"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_bind"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/btn_wallet_gradient"
            android:text="绑定"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_recharge"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="130dp"
            android:layout_toLeftOf="@+id/btn_bind"
            android:background="@drawable/btn_wallet_gradient"
            android:text="充值"
            android:textColor="@color/white" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f1f1f1" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

    <include layout="@layout/normal_empty_layout" />

</LinearLayout>
