<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.tb.wangfang.news.ui.activity.JournalActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"

        android:background="@color/colorPrimaryDark">

        <ImageView
            android:id="@+id/tv_return"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="16sp"
            android:paddingRight="16dp"
            android:src="@mipmap/return_icon" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:ellipsize="end"

            android:gravity="center"
            android:lines="1"
            android:maxEms="13"
            android:text=""
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_sign_one"
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_book"
            android:layout_width="120dp"
            android:layout_height="175dp"
            android:layout_marginLeft="16.5dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="215dp">

            <TextView
                android:id="@+id/tv_journal_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="农机化研究"
                android:textColor="@color/black_text"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/ll_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/tv_journal_name">

                <!--<TextView-->
                    <!--android:id="@+id/tv_label"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginLeft="10dp"-->
                    <!--android:background="@drawable/red_label"-->
                    <!--android:padding="2dp"-->
                    <!--android:text="北大核心"-->
                    <!--android:textColor="@color/white"-->
                    <!--android:textSize="10sp" />-->

            </LinearLayout>


            <TextView
                android:id="@+id/tv_sign_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_journal_name"
                android:layout_marginTop="15dp"
                android:text="国际刊号 : "
                android:textColor="@color/gray_text_6"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_national_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_journal_name"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/tv_sign_three"
                android:ellipsize="end"
                android:lines="1"
                android:text="农机化研究"
                android:textColor="@color/wanfang_gray_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_sign_fourth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_sign_three"
                android:layout_marginTop="12.5dp"
                android:text="国内刊号 : "
                android:textColor="@color/gray_text_6"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_china_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_sign_three"
                android:layout_marginTop="12.5dp"
                android:layout_toRightOf="@+id/tv_sign_fourth"
                android:ellipsize="end"
                android:lines="1"
                android:text="农机化研究"
                android:textColor="@color/wanfang_gray_text" />


            <TextView
                android:id="@+id/tv_sign_six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_sign_fourth"
                android:layout_marginTop="12.5dp"
                android:text="出版周期 : "
                android:textColor="@color/gray_text_6"

                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_sign_fourth"
                android:layout_marginTop="12.5dp"
                android:layout_toRightOf="@+id/tv_sign_six"
                android:ellipsize="end"
                android:lines="1"
                android:text="月刊"
                android:textColor="@color/wanfang_gray_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_sign_six"
                android:layout_marginTop="12.5dp"
                android:background="@drawable/ripple_white_bg"
                android:text=">> 查看详情"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:background="@drawable/ripple_white_bg"
                android:drawableLeft="@mipmap/order_blue_icon"
                android:drawablePadding="7.5dp"
                android:text="订阅"
                android:textColor="#333"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="22.5dp"
                android:layout_toRightOf="@+id/tv_order"
                android:background="@drawable/ripple_white_bg"
                android:drawableLeft="@mipmap/share_blue_icon"
                android:drawablePadding="7.5dp"
                android:text="分享"
                android:textColor="#333"
                android:textSize="12sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>


    <android.support.design.widget.TabLayout
        android:id="@+id/tl_time"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        app:tabBackground="@color/divide"
        app:tabGravity="center"
        app:tabIndicatorColor="@color/colorPrimaryDark"
        app:tabMinWidth="90dp"
        app:tabSelectedTextColor="@color/colorPrimaryDark"
        app:tabTextColor="@color/wanfang_gray_text"></android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_period"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"></android.support.v4.view.ViewPager>

</LinearLayout>
