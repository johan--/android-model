<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tb.wangfang.news.ui.activity.BindPhoneActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:id="@+id/tv_return"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="16sp"
            android:paddingRight="16dp"
            android:src="@mipmap/return_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="账号绑定"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="17dp"
            android:paddingLeft="38dp"
            android:paddingRight="25dp"
            android:paddingTop="17dp"
            android:src="@mipmap/qc_code_icon" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_quick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pre_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.5dp"
                android:drawablePadding="4dp"
                android:drawableRight="@mipmap/pull_down_icon"
                android:text="+86"
                android:textColor="#333"
                android:textSize="16sp" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edit_phonenum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入正确的手机号码"
                android:inputType="phone"
                android:lines="1"
                android:maxLines="1"
                android:paddingLeft="4dp"
                android:shadowColor="@color/black"
                android:textColor="#333"
                android:textColorHint="#ccc"
                android:textCursorDrawable="@drawable/edit_cursor_color"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="16.5dp"
            android:background="@color/divide" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edit_security"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="16.5dp"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="phone"
                android:lines="1"
                android:maxLines="1"
                android:paddingLeft="4dp"
                android:shadowColor="@color/black"
                android:textColor="#333"
                android:textColorHint="#ccc"
                android:textCursorDrawable="@drawable/edit_cursor_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_get_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="6.5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="获取验证码"
                android:textColor="#417dc9"
                android:textSize="16sp" />

        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="16.5dp"
            android:layout_marginRight="16.5dp"
            android:background="@color/divide" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="16.5dp"
        android:layout_marginRight="16.5dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_blue_bg"
        android:text="提交"
        android:textColor="@color/white" />
</LinearLayout>
