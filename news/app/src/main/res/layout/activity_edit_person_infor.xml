<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tb.wangfang.news.ui.activity.EditPersonInforActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"

            android:background="@color/colorPrimaryDark">

            <ImageView
                android:id="@+id/tv_return"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:paddingLeft="16sp"
                android:paddingRight="16dp"
                android:src="@mipmap/return_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="个人信息"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_user_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:src="@mipmap/userbg_icon" />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="用户名:ASDF15516"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <com.tb.wangfang.news.widget.TestView
                android:layout_width="match_parent"
                android:layout_height="30dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_nick_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:drawableRight="@mipmap/step_arrow_icon"
            android:gravity="center_vertical"
            android:paddingLeft="16.5dp"
            android:paddingRight="20dp"
            android:text="昵称"
            android:textSize="16sp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16.5dp"
                android:layout_marginRight="16.5dp"
                android:background="@color/divide" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:drawableRight="@mipmap/step_arrow_icon"
            android:gravity="center_vertical"
            android:paddingLeft="16.5dp"
            android:paddingRight="20dp"
            android:text="姓名"
            android:textSize="16sp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16.5dp"
                android:layout_marginRight="16.5dp"
                android:background="@color/divide" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_last_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:drawableRight="@mipmap/step_arrow_icon"
            android:gravity="center_vertical"
            android:paddingLeft="16.5dp"
            android:paddingRight="20dp"
            android:text="曾用名"
            android:textSize="16sp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16.5dp"
                android:layout_marginRight="16.5dp"
                android:background="@color/divide" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_id_country"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:drawableRight="@mipmap/step_arrow_icon"
            android:gravity="center_vertical"
            android:paddingLeft="16.5dp"
            android:paddingRight="20dp"
            android:text="身份证号"
            android:textSize="16sp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16.5dp"
                android:layout_marginRight="16.5dp"
                android:background="@color/divide" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:drawableRight="@mipmap/step_arrow_icon"
            android:gravity="center_vertical"
            android:paddingLeft="16.5dp"
            android:paddingRight="20dp"
            android:text="性别"
            android:textSize="16sp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16.5dp"
                android:layout_marginRight="16.5dp"
                android:background="@color/divide" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_birthday"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:drawableRight="@mipmap/step_arrow_icon"
            android:gravity="center_vertical"
            android:paddingLeft="16.5dp"
            android:paddingRight="20dp"
            android:text="出生年月"
            android:textSize="16sp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16.5dp"
                android:layout_marginRight="16.5dp"
                android:background="@color/divide" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_job_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:drawableRight="@mipmap/step_arrow_icon"
            android:gravity="center_vertical"
            android:paddingLeft="16.5dp"
            android:paddingRight="20dp"
            android:text="职称"
            android:textSize="16sp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16.5dp"
                android:layout_marginRight="16.5dp"
                android:background="@color/divide" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_unit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:drawableRight="@mipmap/step_arrow_icon"
            android:gravity="center_vertical"
            android:paddingLeft="16.5dp"
            android:paddingRight="20dp"
            android:text="当前单位/院校:"
            android:textSize="16sp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16.5dp"
                android:layout_marginRight="16.5dp"
                android:background="@color/divide" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_education"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:drawableRight="@mipmap/step_arrow_icon"
            android:gravity="center_vertical"
            android:paddingLeft="16.5dp"
            android:paddingRight="20dp"
            android:text="最高学历:"
            android:textSize="16sp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16.5dp"
                android:layout_marginRight="16.5dp"
                android:background="@color/divide" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_graduate_school"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:drawableRight="@mipmap/step_arrow_icon"
            android:gravity="center_vertical"
            android:paddingLeft="16.5dp"
            android:paddingRight="20dp"
            android:text="毕业院校:"
            android:textSize="16sp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16.5dp"
                android:layout_marginRight="16.5dp"
                android:background="@color/divide" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_reward"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:drawableRight="@mipmap/step_arrow_icon"
            android:gravity="center_vertical"
            android:paddingLeft="16.5dp"
            android:paddingRight="20dp"
            android:text="获奖经历"
            android:textSize="16sp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16.5dp"
                android:layout_marginRight="16.5dp"
                android:background="@color/divide" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_subject"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:drawableRight="@mipmap/step_arrow_icon"
            android:gravity="center_vertical"
            android:paddingLeft="16.5dp"
            android:paddingRight="20dp"
            android:text="学科:"
            android:textSize="16sp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16.5dp"
                android:layout_marginRight="16.5dp"
                android:background="@color/divide" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_interest"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:drawableRight="@mipmap/step_arrow_icon"
            android:gravity="center_vertical"
            android:paddingLeft="16.5dp"
            android:paddingRight="20dp"
            android:text="感兴趣的主题:"
            android:textSize="16sp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16.5dp"
                android:layout_marginRight="16.5dp"
                android:background="@color/divide" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>